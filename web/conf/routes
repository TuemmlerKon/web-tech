# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /                        controllers.Application.index()
GET        /meine-dateien           controllers.Application.myfiles()
GET        /einstellungen           controllers.Application.settings()
POST       /einstellungen/test      controllers.Application.test()
GET        /agb                     controllers.Application.gtc()
GET        /impressum               controllers.Application.imprint()
GET        /registrierung           controllers.Account.register()
GET        /login                   controllers.Account.login()
GET        /logout                  controllers.Account.logout()
GET        /aktivierung             controllers.Account.activation(key = "")
GET        /aktivierung/:key        controllers.Account.activation(key: String)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file            controllers.Assets.at(path="/public", file)
GET        /webjars/*file           controllers.WebJarAssets.at(file)
GET        /auth/assets/*file       controllers.Assets.at(path="/public", file)
->         /auth                    securesocial.Routes
