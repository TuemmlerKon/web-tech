# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                             controllers.Application.index()
GET         /einstellungen                controllers.Application.settings()
GET         /agb                          controllers.Application.gtc()
GET         /impressum                    controllers.Application.imprint()
GET         /registrierung                controllers.Account.register()
POST        /registrierung                controllers.Account.registerPost()
GET         /login                        controllers.Account.login()
POST        /login                        controllers.Account.loginPost()
POST        /passwortaendern              controllers.Account.changePassword()
GET         /logout                       controllers.Account.logout()
GET         /aktivierung                  controllers.Account.activation(key = "")
GET         /aktivierung/:key             controllers.Account.activation(key: String)
POST        /accountloeschen              controllers.Account.rm()
GET         /meine-dateien                controllers.Filesystem.index()
GET         /datei/loeschen/:file         controllers.Filesystem.deleteFile(file: Long)
GET         /cwd/:folder                  controllers.Filesystem.cwd(folder: Long)
GET         /download/:file               controllers.Filesystem.download(file: Long)
POST        /ordner/neu                   controllers.Filesystem.newFolder()
POST        /datei/neu                    controllers.Filesystem.newFile()
#Routen f√ºr die Modalfenster
GET         /modal/neuerordner            controllers.Modal.newFolder()
GET         /modal/neuedatei              controllers.Modal.newFile()
GET         /modal/accountloeschen        controllers.Modal.rmAccount()
GET         /modal/news/neu               controllers.Modal.newNews()
#News
GET         /news                         controllers.News.index()
POST        /news/neu                     controllers.News.addPost()
GET         /news/loeschen/:id            controllers.News.rm(id: Long)
#JSON-Antowrtende Aktions
GET         /json/files                   controllers.Filesystem.jsonFilesList()
GET         /json/news                    controllers.News.jsonNewsList()
#Websockets
GET         /news/updates                 controllers.News.newsWS()
GET         /files/updates                controllers.Filesystem.filesWS()
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                 controllers.Assets.at(path="/public", file)
GET         /webjars/*file                controllers.WebJarAssets.at(file)
